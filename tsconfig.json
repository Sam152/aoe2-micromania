{
  "compilerOptions": {
    "module": "es2020",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist/js/",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
